<Window x:Class="DesktopContactsApp.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="ContactDetailsWindow" Height="300" Width="500">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="NameTextBox"
                     Margin="0,0,0,5"/>
            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox"
                     Margin="0,0,0,5"/>
            <TextBlock Text="Phone:"/>
            <TextBox x:Name="PhoneTextBox"
                     Margin="0,0,0,5"/>
            <Button x:Name="UpdateContactButton" 
                    Margin="0,0,0,5"
                    Content="Update"
                    Click="UpdateContactButton_Click"/>
            <Button x:Name="DeleteContactButton"
                    Content="Delete"
                    Click="DeleteContactButton_Click"
                    Background="Red"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
